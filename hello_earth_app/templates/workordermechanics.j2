<html>

<head>
	<title>Work Order Mechanic Details</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <h1>Work Order Products</h1>
    
    <div>
        <table border="1" cellpadding="5"> 
            <caption> Work Order Product Details: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 

                        <th>Delete</th>

                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                        <tr>
                            <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}
                            
                            <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 

                        <!-- Create our edit/delete buttons -->
							<td><a href="delete_workordermechanics/{{item.workOrderMechanicId}}" class="btn btn-default">Delete</a></td>

                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>


	<p>&nbsp;</p>

		<!-- form to INSERT new data into workOrders-->
		<form id="insertMechanic" action="/mechanicdetails/{{data[0].workOrderMechanicId}}" method="post">
			<legend><strong>Add Mechanic to Work Order</strong></legend>
			<fieldset>
                <!-- placeholder shows ghost text, required forces an input -->
				<label for="email">Email:</label>
				<select class="form-control" id="email" name="email" placeholder="" required>
				<!-- these are hard coded, but you can add code to make this dynamic -->
                    <option value="1">jojo@mecha.com</option>
                    <option value="2">jimbob@repar.com</option>
                    <option value="3">hector@servi.com</option>
				</select>

            </fieldset>

            <!-- Create 'Add Product to Work Order' and 'Cancel' buttons -->
			<input type="submit" value="Add Mechanic to Work Order" name="Add_Mechanic" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browseWorkOrders()"> 
        </form>
	</div>	<!-- browse -->

</body>
</html>