	function updateWorkOrderMechanic(workOrderMechanicId) {
		showform('update');
	}

	function deleteWorkOrderMechanic(workOrderMechanicId) {
		showform('delete');
	}

	function browseWorkOrderMechanics(workOrderId) {
		showform('browse');
	}

	function showAll() {
		showform('all');
	}
	</script>
</head>

